        width: 300px;
        height: 450px;
        overflow: hidden;
      }
      .c {
        font: 900 40px;
        margin: 30px 0;
        text-align: center;
        letter-spacing: 5px;
        color: #fff;
        font-size: 30px;
      }
      .d {
        margin-top: 100px;
      }
      .e {
        width: 280px;
        margin-bottom: 20px;
        outline: none;
        border: 0;
        padding: 12px;
        font: 900 16px;
        background-color: rgb(0, 0, 0, 0.5);
      }
      .f {
        text-align: center;
        height: 24px;
        padding: 12px;
        font: 900px 20px;
